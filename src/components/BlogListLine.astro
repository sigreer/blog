---
export interface Props {
  title: string
  content: string
  slug: string
  tags: string[]
  image: {id: string, description: string}
}

const { title, content, slug, tags, image } = Astro.props
---

<li class="flex flex-col rounded-md bg-white hover:shadow-lg hover:scale-105 shadow-md transition h-32">
  <a 
  href={`/blog/${slug}`} 
  class="flex flex-row gap-y-1 p-0 relative"
  >
  <div class="w-1/6 py-0 px-0 inset-0 absolute">
    <img src={ `${process.env.DIRECTUS_URL}/assets/${image}` } alt={title} class="h-full w-full rounded-l-md"/>
</div>
    <div class="flex flex-col gap-y-0 py-1 px-4 w-5/6">
      <h3 class="pr-4 pt-1 text-base font-semibold">
        {title}
      </h3>
      <p class="text-sm line-clamp-2">
        {content}
      </p>
      <div class="flex flex-wrap gap-1 tag-block">
        {tags?.map((tag) => (
          <span
            class="rounded-sm px-2 py-1 text-xs font-bold text-white shadow-sm-light transition tag-style" data-tag={tag}>
            {tag}
          </span>
        ))}
      </div>
    </div>
    

  </a>
</li>