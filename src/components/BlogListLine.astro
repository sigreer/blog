---
export interface Props {
  title: string
  content: string
  slug: string
  tags: string[]
  image: {id: string, description: string}
}

const { title, content, slug, tags, image } = Astro.props
---

<li class="flex flex-col rounded-md bg-white hover:shadow-lg hover:scale-105 shadow-md transition h-44">
  <a 
  href={`/blog/${slug}`} 
  class="flex flex-row gap-x-1 p-1 relative h-full"
  >
  <div class="w-1/5 overflow-hidden">
    <img src={ `${process.env.DIRECTUS_URL}/assets/${image}` } alt={image.description} class="h-full w-full object-cover object-center rounded-l-md"/>
</div>

    <div class="flex flex-col gap-y-0 py-1 px-4 w-5/6">
      <h3 class="2xl:text-2xl font-semibold line-clamp-1 py-1">
        {title}
      </h3>
      <p class="2xl:text-lg md:text-base text-sm h-auto mb-1.5 line-clamp-2">
        {content}
      </p>
      <div class="flex flex-wrap gap-1 tag-block">
        {tags?.map((tag) => (
          <span
            class="rounded-md px-2 py-1 text-xs md:text-base font-semibold text-white shadow-sm-light transition tag-style" data-tag={tag}>
            {tag}
          </span>
        ))}
      </div>
    </div>
    

  </a>
</li>