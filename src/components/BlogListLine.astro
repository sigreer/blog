---
export interface Props {
  title: string
  content: string
  slug: string
  tags: string[]
  image: {id: string, description: string}
}

const { title, content, slug, tags, image } = Astro.props
---

<li class="flex flex-col rounded-md bg-white shadow-md transition">
  <a 
  href={`/blog/${slug}`} 
  class="flex flex-row gap-y-1 p-2 hover:bg-opacity-50-xl hover:bg-blue-300"
  style={image ? `background-image: url(${process.env.DIRECTUS_URL}/assets/${image}?width=60?height=60);` : ''}
  >
  <div class="w-1/5 h-full py-4 px-2">
    <img src={ `${process.env.DIRECTUS_URL}k/assets/${image}?width=150&height=150` } alt={title} class="h-full w-full rounded-md"/>
</div>
    <div class="flex flex-col gap-y-1 py-2 px-4 w-4/5">
      <h2 class="pr-4 pt-2 text-md font-semibold">
        {title}
      </h2>
      <p class="text-sm">
        {content}
      </p>
      <div class="flex flex-wrap gap-1 tag-block">
        {tags?.map((tag) => (
          <span
            class=" rounded-md px-2 py-1 text-sm font-bold text-white shadow transition" data-tag={tag}>
            {tag}
          </span>
        ))}
      </div>
    </div>
    

  </a>
</li>