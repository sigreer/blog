---
export interface Props {
  title: string
  excerpt: string
  slug: string
  tags: string[]
  image: {
    id: string
    description: string
  }
  className: string
}

const { title, excerpt, slug, tags, image, className } = Astro.props
---

<li class={`rounded-md bg-white shadow-md transition hover:shadow-xl hover:scale-105 2xl:h-[36rem] ${className}`}>
  <a href={`/blog/${slug}`} class="flex flex-col h-full gap-y-2 pb-4">
    <div class="w-full h-1/2 rounded-t-md overflow-hidden p-1">
      <img src={`${process.env.DIRECTUS_URL}/assets/${image}`} alt={title} class="h-full w-full rounded-t-md object-cover object-center"/>
    </div>
    <div class="flex h-1/2 flex-col gap-y-1 px-4">
      <h3 class="2xl:text-2xl font-semibold line-clamp-1 py-1">
        {title}
      </h3>
      <p class="2xl:text-lg lg:text-base text-sm h-4/6 line-clamp-5">
        {excerpt}
      </p>
      <div class="flex flex-wrap gap-1 h-1/6 p-1 tag-block">
        {tags?.map((tag) => (
          <span class="rounded-md px-2 py-1 text-xs md:text-base font-semibold text-white shadow-sm-light transition tag-style" data-tag={tag}>
            {tag}
          </span>
        ))}
      </div>
    </div>
  </a>
</li>